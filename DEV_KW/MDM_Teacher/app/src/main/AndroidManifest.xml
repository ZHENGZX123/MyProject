<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.kiway.mdm.teacher">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="cn.kiway.mdm.KWApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar"
        tools:replace="android:allowBackup,android:icon,android:label,android:name">
        <activity
            android:name="cn.kiway.mdm.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.kiway.mdm.activity.NoNetActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="cn.kiway.mdm.activity.ViewPhotosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="cn.kiway.mdm.activity.VideoActivity"
            android:screenOrientation="landscape" />

        <receiver android:name="cn.kiway.mdm.broadcast.NetChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <service android:name="cn.kiway.mdm.service.RecordService" />

        <activity
            android:name="cn.kiway.mdm.activity.StudentGridActivity"
            android:screenOrientation="landscape"></activity>

        <activity
            android:name="cn.kiway.mdm.activity.CourseListActivity"
            android:screenOrientation="landscape"></activity>

        <activity
            android:name="cn.kiway.mdm.activity.Course0Activity"
            android:screenOrientation="landscape"></activity>

        <activity
            android:name="cn.kiway.mdm.activity.Course1Activity"
            android:screenOrientation="landscape"></activity>

        <activity
            android:name="cn.kiway.mdm.activity.ResultActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name="cn.kiway.mdm.activity.TongjiActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name="cn.kiway.mdm.activity.TongjiActivity2"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name="cn.kiway.mdm.activity.ResultDetailActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name="cn.kiway.mdm.activity.WhiteBoardActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>