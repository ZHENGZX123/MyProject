<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/passwordRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入密码："
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </LinearLayout>

        <Button
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="进入设置" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/settingsRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备编号（别名）"
                android:textColor="#000000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/codeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/code"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/code"
                android:text="f865f5def655555555555were5sada66 "
                android:textColor="#666666"
                android:textSize="18sp" />


            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/imei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/code"
                android:layout_below="@+id/code"
                android:text="IMEI"
                android:textColor="#000000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/imeiValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imei"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/imei"
                android:text="f865f5def************5sada66 "
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/code"
                android:layout_below="@+id/imei"
                android:text="SN"
                android:textColor="#000000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/snValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/sn"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/sn"
                android:text="f865f5def************5sada66 "
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/mac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/sn"
                android:layout_below="@+id/sn"
                android:text="有线MAC"
                android:textColor="#000000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/macValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mac"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/mac"
                android:text="00:8C:9A:55:99"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mac2"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/sn"
                android:layout_below="@+id/mac"
                android:text="无线MAC"
                android:textColor="#000000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/macValue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mac2"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/mac2"
                android:text="00:8C:9A:55:99"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/sn"
                android:layout_below="@+id/mac2"
                android:text="WIFI"
                android:textColor="#000000"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/wifiValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/wifi"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/wifi"
                android:text="KWHW1"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/sn"
                android:layout_below="@+id/wifi"
                android:text="版本号"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/versionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/version"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/version"
                android:text="1.0.0"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/connection"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/sn"
                android:layout_below="@+id/version"
                android:text="连接方式"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/connectionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/connection"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/connection"
                android:text="WIFI"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/sn"
                android:layout_below="@+id/connection"
                android:text="IP地址"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ipValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ip"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/ip"
                android:text="192.168.0.12"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/yanma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/sn"
                android:layout_below="@+id/ip"
                android:text="掩码"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/yanmaValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/yanma"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/yanma"
                android:text="255.255.255.0"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/wangguan"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/sn"
                android:layout_below="@+id/yanma"
                android:text="网关地址"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/wangguanValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/wangguan"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/wangguan"
                android:text="0.0.0.0"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/zhiwen"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/sn"
                android:layout_below="@+id/wangguan"
                android:text="指纹机状态"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/zhiwenValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/zhiwen"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/zhiwen"
                android:text="未连接"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dns"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/sn"
                android:layout_below="@+id/zhiwen"
                android:text="DNS"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dnsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/dns"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/dns"
                android:text=""
                android:textColor="#666666"
                android:textSize="18sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang"
                android:text="绑卡"
                android:textColor="#666666"
                android:textSize="20sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang"
                android:text="音量+"
                android:textColor="#666666"
                android:textSize="20sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang"
                android:text="音量-"
                android:textColor="#666666"
                android:textSize="20sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang"
                android:text="关机"
                android:textColor="#666666"
                android:textSize="20sp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang"
                android:text="定时开关机"
                android:textColor="#666666"
                android:textSize="20sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang"
                android:text="重启设备"
                android:textColor="#666666"
                android:textSize="20sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang"
                android:text="重启APP"
                android:textColor="#666666"
                android:textSize="20sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang"
                android:text="WIFI"
                android:textColor="#666666"
                android:textSize="20sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang"
                android:text="网络检测"
                android:textColor="#666666"
                android:textSize="20sp" />

            <Button
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/kuang"
                android:text="恢复系统桌面"
                android:textColor="#666666"
                android:textSize="20sp" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
