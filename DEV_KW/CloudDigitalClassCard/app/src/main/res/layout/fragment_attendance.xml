<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="30dp"
              android:paddingRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/_4D1E90FF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="7dp">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/bule"
            android:drawablePadding="7dp"
            android:text="应到:"
            android:textColor="@color/_333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/yingdao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18人"
            android:textColor="@color/_666666"
            android:textSize="18sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/green"
            android:drawablePadding="7dp"
            android:text="已到:"
            android:textColor="@color/_333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/yidao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0人"
            android:textColor="@color/_666666"
            android:textSize="18sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/yellow"
            android:drawablePadding="7dp"
            android:text="迟到:"
            android:textColor="@color/_333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/cidao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80人"
            android:textColor="@color/_666666"
            android:textSize="18sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/red"
            android:drawablePadding="7dp"
            android:text="缺席:"
            android:textColor="@color/_333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/quexi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0人"
            android:textColor="@color/_666666"
            android:textSize="18sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/bule"
            android:drawablePadding="7dp"
            android:text="考勤时间:"
            android:textColor="@color/_333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/shijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:00~11:00 / 14:00~18:30"
            android:textColor="@color/_666666"
            android:textSize="18sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="5dp"
        android:numColumns="10"
        android:verticalSpacing="5dp"></GridView>
</LinearLayout>
