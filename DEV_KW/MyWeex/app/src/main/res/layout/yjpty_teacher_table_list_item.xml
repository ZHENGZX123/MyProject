<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/_f7f7f7"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pic"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_70dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="#e5e5e5"/>

            <ImageView
                android:id="@+id/type"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_12dp"
                android:contentDescription="@string/app_name"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/session_name"
                android:layout_width="@dimen/_50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:background="#50000000"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_10sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_7dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/_3dp"
                    android:singleLine="true"
                    android:textColor="@color/_333333"
                    android:textSize="@dimen/_14sp"/>

                <ImageView
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_3dp"
                    android:contentDescription="@string/app_name"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_3dp"
                    android:textColor="#666666"
                    android:textSize="@dimen/_14sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/type_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yjpty_green_line_val"
                    android:padding="@dimen/_2dp"
                    android:singleLine="true"
                    android:textColor="#00cc99"
                    android:textSize="@dimen/_12sp"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_3dp"
                    android:background="@drawable/yjpty_green_line_val"
                    android:paddingBottom="@dimen/_2dp"
                    android:paddingLeft="@dimen/_3dp"
                    android:paddingRight="@dimen/_3dp"
                    android:paddingTop="@dimen/_2dp"
                    android:textColor="@color/_00cc99"
                    android:textSize="@dimen/_14sp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/isplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/_5dp"
            android:gravity="center"
            android:padding="@dimen/_2dp"
            android:text="已上课"
            android:textColor="#ff9966"
            android:textSize="@dimen/_12sp"/>

        <uk.co.senab.photoview.widget.FilterImageView
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:src="@drawable/yjpty_video_play"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="#e5e5e5"/>

    <TextView
        android:id="@+id/jw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_00cc99"
        android:gravity="center"
        android:padding="@dimen/_10dp"
        android:textColor="@color/_ffffff"
        android:textSize="@dimen/_14sp"
        android:visibility="gone"/>

</LinearLayout>