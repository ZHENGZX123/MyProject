<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:layout_alignParentTop="true"
        android:background="#12b7f5" >

        <cn.kwim.mqttcilent.common.views.FilterImageView
            android:id="@+id/iv_back"
            android:layout_width="40dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/yjpty_previous" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/im_main_activity_add"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"

        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/im_nodatas"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂未有数据！"
            android:textColor="#12b7f5"
            android:layout_below="@+id/imageView"
            android:gravity="center"/>
    </RelativeLayout>


    <ListView
        android:id="@+id/list"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_above="@+id/bar_bottom"
        android:cacheColorHint="@color/transparent"
        android:divider="@null"
        android:listSelector="@color/transparent" />

    <LinearLayout
        android:id="@+id/bar_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C0C0C0" />

        <LinearLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="4dp" >

            <RelativeLayout
                android:id="@+id/edittext_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="bottom" >

                <cn.kwim.mqttcilent.common.views.MyEditText
                    android:id="@+id/content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/im_chatbottom"
                    android:maxHeight="248dip"
                    android:minHeight="48dip"
                    android:paddingLeft="10dp"
                    android:paddingRight="28dp"
                    android:textColor="#333"
                    android:textSize="15sp"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_emoticons_normal"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_margin="1dip"
                android:paddingRight="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/im_face"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_more"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/im_plus"
                android:onClick="more"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/im_chat_send_btn_selector"
                android:onClick="onClick"
                android:text="发送"
                android:textColor="#666666"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <!-- 表情grid显示面板 -->

        <LinearLayout
            android:id="@+id/ll_emoticon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBECED"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <android.support.v4.view.ViewPager
                android:id="@+id/face_viewpager"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:padding="10dip" />

            <LinearLayout
                android:id="@+id/face_dots_container"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>