<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:layout_alignParentTop="true"
        android:background="@color/_12b7f5" >

        <cn.kwim.mqttcilent.common.views.FilterImageView
            android:id="@+id/iv_back"
            android:layout_width="40dip"
            android:layout_height="35dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/yjpty_previous" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="8"
            android:text="xxxx班"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <cn.kwim.mqttcilent.common.views.FilterImageView
            android:id="@+id/iv_personinfo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:src="@drawable/im_group"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_personinfo"
            android:clickable="true"
            android:src="@drawable/im_icon_single_setting"
            android:visibility="gone" />

        <cn.kwim.mqttcilent.common.views.FilterImageView
            android:id="@+id/iv_top_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="45dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/im_chevron" />
    </RelativeLayout>
    <cn.kwim.mqttcilent.common.views.DropdownListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dip"
        android:divider="@null"
        android:dividerHeight="7dp"
        android:fadingEdge="none"
        android:listSelector="@color/transparent"
        android:scrollbarStyle="outsideOverlay"
        android:transcriptMode="normal"
        android:layout_above="@+id/bar_bottom"
        android:layout_below="@+id/title"/>
    <LinearLayout
        android:id="@+id/ll_btn_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="#ffeeeeee"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="6dp"
            android:weightSum="3"
            >

            <LinearLayout
                android:id="@+id/ll_top_homework"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_top_homework"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/im_spread_text" />

                <TextView
                    android:id="@+id/tv_top_homework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="作业"
                    android:textColor="#808080" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_top_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/im_megaphone" />

                <TextView
                    android:id="@+id/tv_top_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="通知"
                    android:textColor="#808080" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_top_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/im_signs" />

                <TextView
                    android:id="@+id/tv_top_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="活动"
                    android:textColor="#808080" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_top_pic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/im_picture_multiple" />

                <TextView
                    android:id="@+id/tv_top_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="图片"
                    android:textColor="#808080" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_top_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:weightSum="4" >

                <LinearLayout
                    android:id="@+id/ll_top_video"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/im_video" />

                    <TextView
                        android:id="@+id/tv_top_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="视频"
                        android:textColor="#808080" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_top_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/im_folder_multiple" />

                    <TextView
                        android:id="@+id/tv_top_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="资料"
                        android:textColor="#808080" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_top_person"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/im_folder_multiple" />

                    <TextView
                        android:id="@+id/tv_top_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="个人"
                        android:textColor="#808080" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_top_all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/im_weather_star" />

                    <TextView
                        android:id="@+id/tv_top_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="全部"
                        android:textColor="#808080" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:weightSum="4" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp" >

                        <ImageView
                            android:id="@+id/btn_top_file"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:scaleType="fitCenter" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="文件"
                        android:textColor="#727171" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_top_voice_call"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp" >

                        <ImageView
                            android:id="@+id/btn_voice_top_call"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_centerInParent="true"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:scaleType="fitCenter" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#DEDEE8" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bar_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1px"
            android:background="@color/_e5e5e5" />

        <LinearLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="4dp" >

            <RelativeLayout
                android:id="@+id/edittext_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="bottom" >

                <cn.kwim.mqttcilent.common.views.MyEditText
                    android:id="@+id/content"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_40dp"
                    android:background="@drawable/im_chatbottom"
                    android:cursorVisible="true"
                    android:maxHeight="248dip"
                    android:minHeight="48dip"
                    android:paddingLeft="10dp"
                    android:paddingRight="28dp"
                    android:textColor="#333"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </RelativeLayout>

            <cn.kwim.mqttcilent.common.views.FilterImageView
                android:id="@+id/iv_emoticons_normal"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_margin="1dip"
                android:paddingRight="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/im_face"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_more"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/im_plus"
                android:onClick="more"
                />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="45dip"
                android:layout_height="32dip"
                android:layout_marginRight="4dp"
                android:background="@drawable/im_chat_send_btn_selector"
                android:onClick="onClick"
                android:text="发送"
                android:textColor="#666666"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- 表情grid显示面板 -->

        <LinearLayout
            android:id="@+id/ll_emoticon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBECED"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <android.support.v4.view.ViewPager
                android:id="@+id/face_viewpager"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:padding="10dip" />

            <LinearLayout
                android:id="@+id/face_dots_container"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f5f5f7"
            android:orientation="vertical" >

            <!-- 图片，表情，名片等按钮 -->

            <LinearLayout
                android:id="@+id/ll_btn_container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="4" >

                    <LinearLayout
                        android:id="@+id/ll_tv_pic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/im_chatbottom"
                            android:padding="10dp"
                            android:src="@drawable/im_pic_zp" />

                        <TextView
                            android:id="@+id/tv_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="图片"
                            android:textColor="#808080" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tv_photo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/im_chatbottom"
                            android:padding="10dp"
                            android:src="@drawable/im_pic_pz" />

                        <TextView
                            android:id="@+id/tv_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="拍照"
                            android:textColor="#808080" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tv_homework"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/im_chatbottom"
                            android:padding="10dp"
                            android:src="@drawable/im_pic_zy" />

                        <TextView
                            android:id="@+id/tv_homework"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="作业"
                            android:textColor="#808080" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tv_notification"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/im_chatbottom"
                            android:padding="10dp"
                            android:src="@drawable/im_pic_tz" />

                        <TextView
                            android:id="@+id/tv_notification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="通知"
                            android:textColor="#808080" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="30dp"
                            android:background="#3A87AD"
                            android:gravity="center"
                            android:text="图片"
                            android:textColor="#ffffff"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="6dp"
                    android:visibility="gone"
                    android:weightSum="4" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp" >

                            <ImageView
                                android:id="@+id/btn_file"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_centerInParent="true"
                                android:clickable="true"
                                android:onClick="onClick"
                                android:scaleType="fitCenter" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="文件"
                            android:textColor="#727171" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_voice_call"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="64dp"
                            android:layout_height="64dp" >

                            <ImageView
                                android:id="@+id/btn_voice_call"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_centerInParent="true"
                                android:clickable="true"
                                android:onClick="onClick"
                                android:scaleType="fitCenter" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/ll_teacher_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="6dp"
                    android:weightSum="4" >
                    <LinearLayout
                        android:id="@+id/ll_tv_video"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/im_chatbottom"
                            android:padding="10dp"
                            android:src="@drawable/im_pic_ps" />

                        <TextView
                            android:id="@+id/tv_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="视频"
                            android:textColor="#808080" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tv_information"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/im_chatbottom"
                            android:padding="10dp"
                            android:src="@drawable/im_pic_zl" />

                        <TextView
                            android:id="@+id/tv_information"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="资料"
                            android:textColor="#808080" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_tv_activity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/im_chatbottom"
                            android:padding="10dp"
                            android:src="@drawable/im_pic_hd" />

                        <TextView
                            android:id="@+id/tv_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="活动"
                            android:textColor="#808080" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/tv_investigation"
                            android:layout_width="64dp"
                            android:layout_height="30dp"
                            android:background="#3A87AD"
                            android:gravity="center"
                            android:text="调查"
                            android:textColor="#ffffff" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>