<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e4e5e6" />

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp" >

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/yjpty_baba" />

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_header"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="8"
            android:singleLine="true"
            android:text="初三一班"
            android:textSize="16sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_class"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_header"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="15"
            android:paddingRight="75dp"
            android:singleLine="true"
            android:text="黄老师：明天不上课咯"
            android:textColor="#7d7d7d"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/unread_group_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/im_unread_count_bg"
            android:gravity="center"
            android:text="7"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="时间"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_subsidisary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/rl_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/im_btn_list_item_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="25dip"
                android:src="@drawable/im_advertising" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="通知"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_notifiction_unread"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/tv_notification"
                    android:background="@drawable/im_unread_backgroud"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="5sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_homework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/im_btn_list_item_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="25dip"
                android:src="@drawable/im_homeworks" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_homework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="作业"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_homework_unread"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/tv_homework"
                    android:background="@drawable/im_unread_backgroud"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="5sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/im_btn_list_item_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="25dip"
                android:src="@drawable/im_landscape" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="活动"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_activity_unread"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/tv_activity"
                    android:background="@drawable/im_unread_backgroud"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="5sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:layout_weight="1"
            android:background="@drawable/im_btn_list_item_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="25dip"
                android:src="@drawable/im_mail_folder" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="资料"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_info_unread"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/tv_info"
                    android:background="@drawable/im_unread_backgroud"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="5sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/im_btn_list_item_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="35dip"
                android:layout_height="25dip"
                android:src="@drawable/im_skala" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="空间"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_space_unread"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/tv_space"
                    android:background="@drawable/im_unread_backgroud"
                    android:gravity="center"
                    android:textSize="5sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>