<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/select_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15dip"
        android:layout_marginRight="@dimen/_15dip"
        android:paddingTop="@dimen/_7dp"
        android:paddingBottom="@dimen/_7dp"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_centerVertical="true"
            />
        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:drawableRight="@drawable/yjpty_radiobutton_selector_bg" />

    </RelativeLayout>

</LinearLayout>