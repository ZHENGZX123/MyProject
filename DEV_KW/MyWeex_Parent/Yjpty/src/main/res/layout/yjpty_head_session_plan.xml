<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f7f7f7"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/gold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7dp"
        android:background="@drawable/yjpty_green_line_val"
        android:orientation="vertical"
        android:padding="@dimen/_5dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yjpty_gray_val"
            android:drawableLeft="@drawable/yjpty_session_flower"
            android:drawablePadding="@dimen/_5dp"
            android:padding="@dimen/_3dp"
            android:text="@string/teacher_gold"
            android:textColor="#f41100"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/gold_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7dp"
            android:lineSpacingExtra="@dimen/_2dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/really"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7dp"
        android:background="@drawable/yjpty_green_line_val"
        android:orientation="vertical"
        android:padding="@dimen/_5dp" >

        <TextView
            android:id="@+id/really_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yjpty_gray_val"
            android:drawableLeft="@drawable/yjpty_session_flower"
            android:drawablePadding="@dimen/_5dp"
            android:padding="@dimen/_3dp"
            android:text="@string/teacher_really"
            android:textColor="#f41100"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/really_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7dp"
            android:lineSpacingExtra="@dimen/_2dp"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_12sp" />
    </LinearLayout>

</LinearLayout>