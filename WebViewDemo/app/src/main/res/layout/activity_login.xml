<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f7f7f7"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:context="com.zk.webviewdemo.cn.zk.webviewdemo.activity.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:background="@color/_3fcc8a"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/_ffffff"
        android:textSize="@dimen/_18sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:src="@mipmap/ic_launcher"/>

        <EditText
            android:id="@+id/userName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/_3fcc8a_line_val"
            android:drawableLeft="@drawable/ic_person"
            android:hint="用户名"
            android:padding="3dp"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/_3fcc8a_line_val"
            android:drawableLeft="@drawable/ic_https"
            android:hint="密码"
            android:inputType="textPassword"
            android:padding="3dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/loadbutton"
            android:layout_width="250dp"
            android:layout_height="@dimen/_40dp"
            android:layout_margin="30dp"
            android:background="@drawable/load_button_selector_bg"
            android:onClick="clickLogin"
            android:text="登录"
            android:textColor="@color/_ffffff"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_f43333"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>
