<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="7dp">

    <TextView
        android:id="@+id/tx1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="7dp"
        android:text="1"
        android:textColor="@color/_333333"
        android:lineSpacingExtra="5dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tx2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="7dp"
        android:text="数学"
        android:textColor="@color/_333333"
        android:lineSpacingExtra="5dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tx3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="7dp"
        android:text="信息"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/_333333"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tx4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="7dp"
        android:lineSpacingExtra="5dp"
        android:text="语文"
        android:textColor="@color/_333333"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tx5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="7dp"
        android:lineSpacingExtra="5dp"
        android:text="语文"
        android:textColor="@color/_333333"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tx6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="7dp"
        android:text="生物"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/_333333"
        android:textSize="18sp"/>
</LinearLayout>
