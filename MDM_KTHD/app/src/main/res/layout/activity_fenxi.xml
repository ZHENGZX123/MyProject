<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_title2"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/tab1"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@null"
            android:onClick="clickTab1"
            android:text="全部"
            android:textColor="#6699ff" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#aaaaaa" />

        <Button
            android:id="@+id/tab2"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@null"
            android:onClick="clickTab2"
            android:text="知识点" />

        <Button
            android:id="@+id/tab3"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@null"
            android:onClick="clickTab3"
            android:text="课堂测评" />

        <Button
            android:id="@+id/tab4"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@null"
            android:onClick="clickTab4"
            android:text="课堂答题" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#e5e5e5"
        android:dividerHeight="1px"
        android:listSelector="@drawable/course_list_selector"
        android:scrollbars="none"></ListView>

</LinearLayout>