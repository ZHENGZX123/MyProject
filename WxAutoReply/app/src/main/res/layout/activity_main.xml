<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="开维客服机器人"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:onClick="start"
        android:text="点击开启服务" />

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/star"
        android:onClick="logout"
        android:text="注销登录" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout"
        android:onClick="test"
        android:text="测试zbus"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="使用方法和注意事项：\n1、输入当前微信昵称。2、点击开启服务即可使用。3、使用期间保持手机屏幕常亮，不能锁屏（最好一直连着充电线，设置不锁屏）。4、保持微信处于手机后台，不能人为干预：不能打开微信操作。5、客服机器人APP必须保持打开状态，保持手机wifi连接正常。6、手机系统要7.0以下，最好使用安卓原生系统。推荐手机LG Nexus5。7、手机不要装360、百度手机助手等一些能杀死APP的软件，关闭各种悬浮控件。8、手机操作系统暂时只能选择简体中文，其他的不可以。"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>
