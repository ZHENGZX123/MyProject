<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lzy.imagepicker.test" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.lzy.imagepicker.test"
        android:targetPackage="com.lzy.imagepicker.test" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" /> <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 从SDCard读取数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <uses-library android:name="android.test.runner" />

        <activity android:name="com.lzy.imagepicker.ui.ImageBaseActivity" />
        <activity
            android:name="com.lzy.imagepicker.ui.ImageGridActivity"
            android:theme="@style/ImagePickerTheme" />
        <activity
            android:name="com.lzy.imagepicker.ui.ImageCropActivity"
            android:theme="@style/ImagePickerTheme" />
        <activity
            android:name="com.lzy.imagepicker.ui.ImagePreviewActivity"
            android:theme="@style/ImagePickerThemeFullScreen" />
        <activity android:name="uk.co.senab.photoview.sample.LauncherActivity" >

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity android:name="uk.co.senab.photoview.sample.SimpleSampleActivity" />
        <activity android:name="uk.co.senab.photoview.sample.ViewPagerActivity" />
    </application>

</manifest>