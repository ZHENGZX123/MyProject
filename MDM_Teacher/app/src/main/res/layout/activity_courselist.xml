<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <include
        android:id="@+id/titleRL"
        layout="@layout/layout_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleRL"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"></View>


        <cn.kiway.mdm.view.refresh.PullToRefreshLayout
            android:id="@+id/refresh_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <include layout="@layout/refresh_head" />

            <cn.kiway.mdm.view.refresh.PullableListView
                android:id="@+id/courseLV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:divider="#001100"
                android:dividerHeight="0dp"
                android:listSelector="#00000000"
                android:scrollbars="none"></cn.kiway.mdm.view.refresh.PullableListView>

            <include layout="@layout/load_more" />
        </cn.kiway.mdm.view.refresh.PullToRefreshLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"></View>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/toolsRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleRL"
        android:layout_marginTop="5dp">

        <include layout="@layout/layout_tools"></include>
    </RelativeLayout>

</RelativeLayout>
