<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/titleRL"
        layout="@layout/layout_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleRL">

        <GridView
            android:id="@+id/studentGV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:horizontalSpacing="10dp"
            android:numColumns="5"
            android:verticalSpacing="10dp"></GridView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#f2f2f2">

            <RelativeLayout
                android:id="@+id/type123RL"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="答题进行中......"
                    android:textColor="#6699ff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/hint"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#aaaaaa" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/line"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button1"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/unSubmitLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/line2"
                    android:layout_below="@+id/time"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/unSubmitCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="剩余5人未作答"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/unSubmitName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/unsubmit"
                        android:scrollbars="vertical"
                        android:padding="5dp"
                        android:text="小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、小明、小红、小黄、"
                        android:textColor="#000000" />
                </LinearLayout>

                <Button
                    android:id="@+id/stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/endbutton"
                    android:onClick="stop"
                    android:padding="10dp"
                    android:text="停止答题"
                    android:textColor="#ffffff" />

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/stop"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#aaaaaa" />

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>