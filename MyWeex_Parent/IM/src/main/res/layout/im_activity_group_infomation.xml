<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#efeff4"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:layout_alignParentTop="true"
        android:background="@color/_12b7f5">

        <cn.kwim.mqttcilent.common.views.FilterImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/yjpty_previous"/>

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/_ltxx"
            android:textColor="#ffffff"
            android:textSize="18sp"/>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:background="#ffffffff"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/headers"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/im_ic_launcher"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/headers"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_headers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/school"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_marginLeft="18dp"
                            android:gravity="center"
                            android:text="@string/_school"
                            android:textColor="#000000"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tv_schoolname"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_toRightOf="@+id/school"
                            android:gravity="center"
                            android:text="深圳中学"
                            android:textColor="#000000"
                            android:textSize="16sp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/code"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_marginLeft="18dp"
                            android:gravity="center"
                            android:text="@string/_classcode"
                            android:textColor="#000000"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tv_classcode"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:layout_toRightOf="@+id/code"
                            android:gravity="center"
                            android:text="123456"
                            android:textColor="#000000"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#e5e5e5"/>

            <LinearLayout
                android:id="@+id/rl_subsidisary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/im_btn_list_item_bg"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/rl_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dip"
                        android:layout_height="60dip"
                        android:src="@drawable/im_advertising"/>

                    <TextView
                        android:id="@+id/tv_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="通知"
                        android:textColor="#353535"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_homework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dip"
                        android:layout_height="60dip"
                        android:src="@drawable/im_homeworks"/>

                    <TextView
                        android:id="@+id/tv_homework"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="作业"
                        android:textColor="#353535"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dip"
                        android:layout_height="60dip"
                        android:src="@drawable/im_landscape"/>

                    <TextView
                        android:id="@+id/tv_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="活动"
                        android:textColor="#353535"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dip"
                        android:layout_height="60dip"
                        android:src="@drawable/im_mail_folder"/>

                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="资料"
                        android:textColor="#353535"
                        android:textSize="16sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dip"
                        android:layout_height="60dip"
                        android:src="@drawable/im_skala"/>

                    <TextView
                        android:id="@+id/tv_space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="空间"
                        android:textColor="#353535"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view_temp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CACECB"/>

            <RelativeLayout
                android:id="@+id/rl_groupName"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/im_btn_list_item_bg"
                android:clickable="true"
                android:padding="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dip"
                    android:text="@string/_qmc"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_groupName"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:paddingRight="25dip"
                    android:text="群聊"
                    android:textColor="#353535"/>

                <ImageView
                    android:id="@+id/arrow0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="10dip"
                android:background="#e4e5e6"
                />

            <RelativeLayout
                android:id="@+id/rl_groupcard"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/im_btn_list_item_bg"
                android:clickable="true"
                android:padding="10dip"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dip"
                    android:text="我的群名片"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_grouptag"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:paddingRight="25dip"
                    android:text="我儿子的爸爸"
                    android:textColor="#353535"/>

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/view_temp1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e4e5e6"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rl_groupmember"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:clickable="true"
                >

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/im_btn_list_item_bg"
                    android:padding="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dip"
                        android:text="群成员"
                        android:textColor="#353535"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_groupnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:paddingRight="25dip"
                        android:textColor="#353535"/>

                    <ImageView
                        android:id="@+id/arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative"
                    android:layout_marginTop="2dp"
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="6">

                    <RelativeLayout
                        android:id="@+id/group_member_header"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:background="#ffffff">

                        <GridView
                            android:id="@+id/member_from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:numColumns="6">
                        </GridView>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view_temp2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d4d4d4"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="10dip"
                android:background="#e4e5e6"
                android:visibility="gone"
                />

            <RelativeLayout
                android:id="@+id/rl_chatdata"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="10dp"
                android:background="@drawable/im_btn_list_item_bg"
                android:clickable="true"
                android:padding="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dip"
                    android:text="聊天记录"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/view_temp3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e4e5e6"/>

            <RelativeLayout
                android:id="@+id/rl_personset"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/im_btn_list_item_bg"
                android:clickable="true"
                android:padding="10dip"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dip"
                    android:text="个人设置"
                    android:textColor="#353535"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <View
                android:id="@+id/view_temp4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rl_adminset"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/im_btn_list_item_bg"
                android:clickable="true"
                android:padding="10dip"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dip"
                    android:text="个人设置"
                    android:textColor="#353535"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <View
                android:id="@+id/view_temp5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dadada"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/qr_code"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/im_btn_list_item_bg"
                android:clickable="true"
                android:padding="10dip"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dip"
                    android:text="二维码"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/view_temp7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d4d4d4"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginTop="10dip"
                android:background="#e4e5e6"
                android:visibility="gone"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="76dip"
                android:background="@drawable/im_btn_list_item_bg"
                android:clickable="true"
                android:padding="10dip"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_groupintroduce"
                    android:layout_width="wrap_content"
                    android:layout_height="28dip"
                    android:paddingLeft="10dip"
                    android:text="群介绍"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_below="@id/tv_groupintroduce"
                    android:paddingLeft="10dip"
                    android:text="本群创建于xxxxxx时候"
                    android:textColor="#353535"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <Button
                android:id="@+id/deleteGroup"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="18dp"
                android:background="@drawable/im_sendbutton"
                android:text="@string/_out_group"
                android:textColor="#ffffffff"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="#d4d4d4"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>